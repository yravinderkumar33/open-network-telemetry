{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "participantId": {
      "type": "string"
    },
    "participantUri": {
      "type": "string"
    },
    "role": {
      "type": "string"
    },
    "telemetry": {
      "type": "object",
      "properties": {
        "batchSize": {
          "type": "integer"
        },
        "syncInterval": {
          "type": "integer"
        },
        "retry": {
          "type": "integer"
        },
        "backupFilePath": {
          "type": "string"
        },
        "storageType": {
          "type": "string",
          "enum": ["LOCAL", "REDIS"]
        },
        "redis": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string"
            },
            "port": {
              "type": "integer"
            },
            "db": {
              "type": "integer"
            }
          },
          "required": ["host", "port", "db"],
          "dependencies": {
            "storageType": ["REDIS"]
          }
        },
        "network": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            }
          },
          "required": ["url"]
        },
        "raw": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            }
          },
          "required": ["url"]
        }
      },
      "required": ["batchSize", "syncInterval", "retry", "storageType", "network", "backupFilePath"]
    },
    "service": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ],
      "additionalProperties": true
    },
    "resource": {
      "type": "object",
      "properties": {
        "attributes": {
          "type": "object"
        }
      },
      "additionalProperties": true
    },
    "loggerOptions": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    }
  },
  "required": ["participantId", "participantUri", "role", "telemetry", "service"]
}
